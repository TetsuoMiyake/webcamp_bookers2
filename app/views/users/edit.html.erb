<h1>User info</h1>

<% if @user.errors.any? %>
 <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
 <ul>
  <% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model:@user, local:true do |f| %>
 <p>Name</p>
 <%= f.text_field :name %>

 <p>Introduction</p>
 <%= f.text_area :introduction %>
 <p><%= f.submit 'Update User' %></p>
 <label for="inputImage">ProfileImage</label>
 <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

<% end %>