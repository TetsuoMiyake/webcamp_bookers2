<div class="container">
 <div class="row">
  <div class=" col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>

   <div class="error_explanation">
    <% if @user.errors.any? %>
     <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
     <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>
   </div>

   <%= form_with model:@user, local:true do |f| %>
    <div class="form-group">
     <p>Name</p>
     <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
     <label for="inputImage", class="form-control-file">Image</label>
     <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    </div>

    <div class="form-group">
     <p>Introduction</p>
     <%= f.text_area :introduction, class: "form-control" %>
    </div>

    <div class="form-group">
     <p><%= f.submit 'Update User', class: "btn btn-secondary btn-md" %></p>
    </div>

   <% end %>
  </div>
 </div>
</div>