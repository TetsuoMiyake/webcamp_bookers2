<div class="container">
  <div class="row">
   <div class="col-sm-3">
    <%= render 'users/info_b', users: @users %>
    <%= render 'users/new_book', users: @users %>
   </div>

   <div class="col-sm-7">
    <h1>Books</h1>
    <table>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
     <% @user.books.each do |book| %>
      <tr>
       <th><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></th>
       <th><%= link_to book.title, book_path(book.id) %></th>
       <th><%= book.body %></th>
      </tr>
     <% end %>
    </table>
   </div>
  </div>
 </div>