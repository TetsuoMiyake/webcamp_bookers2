<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
<p>name<%= @user.name %></p>
<p>introduction<%= @user.introduction %></p>
<% if @user == current_user %>
  <%= link_to "edit", edit_user_path(@user) %>
<% else %>
  <%= link_to "edit", user_path(current_user.id) %>
<% end %>