<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/info_a', users: @users %>
   <%= render 'users/new_book', users: @users %>
  </div>

  <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
   <table class="table">
     <thead>
      <tr>
       <th>image</th>
       <th>name</th>
       <th></th>
      </tr>
     </thead>
     <tbody>
      <% @users.each do |user| %>
       <tr>
        <th><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40' %></th>
        <th><%= user.name %></th>
        <th><%= link_to "Show", mypage_path(user.id) %></th>
       </tr>
      <% end %>
     </body>
   </table>
  </div>
 </div>
</div>