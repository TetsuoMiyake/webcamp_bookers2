<% if @book.errors.any? %>
 <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <%= render 'users/info_a', books: @books %>
    <%= render 'users/new_book', users: @users %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
     </thead>

     <tbody>
      <% @books.each do |book| %>
       <tr>
        <th>
         <%= link_to user_path(book.user.id) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40' %>
         <% end %>
        </th>
        <th><%= link_to book.title, book_path(book.id) %></th>
        <th><%= book.body %></th>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>