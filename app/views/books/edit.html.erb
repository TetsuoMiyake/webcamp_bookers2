<div class="container">
 <div class="row">
  <div class=" col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>Editing Book</h2>

   <div class="error_explanation">
    <% if @book_detail.errors.any? %>
     <h3><%= @book_detail.errors.count %> error prohibited this obj from being saved:</h3>
     <ul>
      <% @book_detail.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>
   </div>

   <%= form_with model:@book_detail, local:true do |f| %>
    <div class="form-group">
     <p>Title</p>
     <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
     <p>Opinion</p>
     <%= f.text_area :body, class: "form-control" %>
    </div>

    <div class="form-group">
     <p><%= f.submit 'Update Book', class: "btn btn-success btn-md" %></p>
    </div>
   <% end %>

   <%= link_to "Show", book_path(@book_detail.id) %> | <%= link_to "Back", books_path %>
  </div>
 </div>
</div>